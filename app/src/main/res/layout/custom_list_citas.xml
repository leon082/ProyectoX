<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:id="@+id/textViewIdCita"
        android:layout_above="@+id/textViewFechaCita"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textViewFechaCita"
        android:layout_alignStart="@+id/textViewFechaCita" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fecha"
        android:id="@+id/textViewFechaCita"
        android:layout_below="@+id/textViewMotivo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinica"
            android:id="@+id/textViewClinicaCita"
            android:layout_below="@+id/textViewFechaCita"
            android:layout_alignLeft="@+id/textViewFechaCita"
            android:layout_alignStart="@+id/textViewFechaCita" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Motivo"
        android:id="@+id/textViewMotivo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hora"
        android:id="@+id/textViewHora"
        android:layout_alignBottom="@+id/textViewClinicaCita"
        android:layout_centerHorizontal="true" />

</RelativeLayout>